<nav class="navbar navbar-expand-lg bg-white fixed-top">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i class="bi bi-calendar-event nav-icon"></i> OneSlot
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Dashboard
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/<%= current_user.username %>">Calendar</a>
              <a class="dropdown-item" href="/<%= current_user.username %>/groups">Your Groups</a>
              <a class="dropdown-item" href="/<%= current_user.username %>/events">Upcoming Events</a>
            </div>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item d-flex justify-content-start align-items-start ">
            <%= link_to edit_user_registration_path, class: "btn nav-custom-btn nav-link w-100" do %>
              <div>
                <% if current_user.profile_picture.attached? %>
                  <%= image_tag current_user.profile_picture, alt: "#{current_user.username}'s profile picture", class: "me-1 navbar-profile-picture" %>
                <% else %>
                  <%= image_tag 'default_profile.png', class:"me-1 navbar-profile-picture"%>
                <% end %>
                <%= current_user.name.split.map(&:capitalize).join(' ')%>
              </div>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn nav-custom-btn nav-link" %>
          <% else %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, class:"btn custom-btn nav-link ms-3" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class:"btn custom-btn nav-link ms-3" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
