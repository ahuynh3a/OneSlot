<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%= 'disabled' if @events.first_page? %>">
      <a class="page-link" href="<%= url_for(page: @events.prev_page) %>" tabindex="-1">Previous</a>
    </li>
    <%# This pagination is very specific to events. You might want to make it more general and move it to events/paginate. You could also try generating custom kaminari views %>
    <% @events.total_pages.times do |n| %>
      <li class="page-item <%= 'active' if n + 1 == @events.current_page %>">
        <a class="page-link" href="<%= url_for(page: n + 1) %>"><%= n + 1 %></a>
      </li>
    <% end %>
    <li class="page-item <%= 'disabled' if @events.last_page? %>">
      <a class="page-link" href="<%= url_for(page: @events.next_page) %>">Next</a>
    </li>
  </ul>
</nav>
