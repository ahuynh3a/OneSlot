<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%= 'disabled' if collection.first_page? %>">
      <a class="page-link" href="<%= url_for(params.merge(page: collection.prev_page)) %>" tabindex="-1">Previous</a>
    </li>
    <% collection.total_pages.times do |n| %>
      <li class="page-item <%= 'active' if n + 1 == collection.current_page %>">
        <a class="page-link" href="<%= url_for(params.merge(page: n + 1)) %>"><%= n + 1 %></a>
      </li>
    <% end %>
    <li class="page-item <%= 'disabled' if collection.last_page? %>">
      <a class="page-link" href="<%= url_for(params.merge(page: collection.next_page)) %>">Next</a>
    </li>
  </ul>
</nav>
