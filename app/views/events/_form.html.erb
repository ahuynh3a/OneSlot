<%= form_with(model: [@calendar, event], local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'form-control-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-control-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, class: 'form-control-label' %>
    <%= form.datetime_field :start_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :end_time, class: 'form-control-label' %>
    <%= form.datetime_field :end_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :timezone, class: 'form-control-label' %>
    <%= form.time_zone_select :timezone, ActiveSupport::TimeZone.all, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :location, class: 'form-control-label' %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>

  <div class="form-group" style="margin-top: 20px;">
    <%= form.submit 'Submit', class: 'btn  submit-btn' %>
  </div>
<% end %>
