<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6">
      <div class="d-flex justify-content-between align-items-center" style="margin-bottom: 20px;">
        <h1 style="font-size: 24px; flex-grow: 1;">Edit Event</h1>
        <%= link_to "Back to events", user_path(username: current_user.username), class: 'btn btn-secondary'%>
      </div>
      <hr>
      <%= render "form", event: @event, calendar: @calendar %>
      <br>
      <div>
        <%= button_to "Delete event", calendar_event_path(@calendar, @event), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn submit-btn' %>
      </div>
    </div>
  </div>
</div>
