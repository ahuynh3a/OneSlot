<h1>
<%=@user.username%>
</h1>

<h2>
Calendar
</h2>

<%= month_calendar events: @events do |date, events| %>
  <div class="day">
    <div class="date"><%= date.day %></div>
    <div class="events">
      <% events.sort_by(&:start_time).each do |event| %>
        <div class="event">
  <%= link_to "#{event.name} - #{event.start_time.strftime("%I:%M %p")} to #{event.end_time.strftime("%I:%M %p")}", event_path(event) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to "Add an event", new_event_path %>
