<div class="row">
  <div class="col md-6">
    <h1>
      <%= @user.username %>
    </h1>

    <ul class="nav nav-pills nav-justified">
      <li class="nav-item">
         <%= link_to "Calendar", user_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
         <%= link_to "Events", user_events_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
         <%= link_to "Groups", user_groups_path(@user.username), class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<h2>
Calendar
</h2>

<%= month_calendar events: @events do |date, events| %>
  <div class="day">
    <div class="date"><%= date.day %></div>
    <div class="events">
      <% events.sort_by(&:start_time).each do |event| %>
        <div class="event">
  <%= link_to "#{event.name} - #{event.start_time.strftime("%I:%M %p")} to #{event.end_time.strftime("%I:%M %p")}", event_path(event) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to "Add an event", new_event_path %>
