<div class="login-container">
  <h2 class="login-title">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login-form' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-group">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { class: 'form-control', autocomplete: 'email' },
                  placeholder: 'Enter your email',
                  label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Reset Password", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
