<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  
  <%= f.error_notification %>
<%= f.input :profile_picture, as: :file %>
<%= f.input :name, required: true, input_html: { placeholder: 'Full name' }, label: false %>
 <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", placeholder: 'Email' }, label: false %>
<%= f.input :username, required: true, input_html: { placeholder: 'Username' }, label: false %>
<%= f.input :timezone, as: :select, collection: ActiveSupport::TimeZone.all.map { |tz| [tz.name, tz.name] }, include_blank: 'Select Your Current Timezone', label: false%>
<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", placeholder: 'Password' }, label: false %>
<%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", placeholder: 'Password Confirmation' }, label: false %>
    <%= f.input :profile_picture, as: :file%>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
