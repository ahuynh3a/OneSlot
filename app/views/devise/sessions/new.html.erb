<div class="login-container">
  <h2 class="login-title">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: false, html: { class: 'login-form' }) do |f| %>
    <div class="form-group">
      <%= f.input :email, 
                  required: false,
                  autofocus: true,
                  input_html: { class: 'form-control', autocomplete: 'email' },
                  placeholder: 'Email',
                  label: false %>
    </div>
    
    <div class="form-group">
      <%= f.input :password,
                  required: false,
                  input_html: { class: 'form-control', autocomplete: 'current-password' },
                  placeholder: 'Password',
                  label: false %>
    </div>
    
    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.input :remember_me, as: :boolean, wrapper: false, label_html: { class: 'form-check-label' }, input_html: { class: 'form-check-input' } %>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
